{
	"info": {
		"_postman_id": "ecommerce-api-collection",
		"name": "E-Commerce Backend API",
		"description": "Collection of API requests for the E-Commerce Backend with Razorpay Integration",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "productId",
			"value": "1",
			"type": "string"
		},
		{
			"key": "orderId",
			"value": "1",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "User APIs",
			"item": [
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"test@example.com\",\n    \"phone\": \"9876543212\",\n    \"address\": \"789 Test Street, Bangalore, Karnataka 560001\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						}
					}
				},
				{
					"name": "Get All Users",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/users",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users"]
						}
					}
				},
				{
					"name": "Get User by ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/users/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "users", "{{userId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Product APIs",
			"item": [
				{
					"name": "Create Product",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Wireless Mouse\",\n    \"description\": \"Ergonomic wireless mouse with USB receiver\",\n    \"price\": 799.00,\n    \"stock\": 100,\n    \"category\": \"Electronics\",\n    \"imageUrl\": \"https://example.com/mouse.jpg\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/products",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products"]
						}
					}
				},
				{
					"name": "Get All Products",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/products",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products"]
						}
					}
				},
				{
					"name": "Get Product by ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/products/{{productId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "{{productId}}"]
						}
					}
				},
				{
					"name": "Get Products by Category",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/products/category/Electronics",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "category", "Electronics"]
						}
					}
				},
				{
					"name": "Search Products",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/products/search?name=Wireless",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "search"],
							"query": [
								{
									"key": "name",
									"value": "Wireless"
								}
							]
						}
					}
				},
				{
					"name": "Update Product",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Wireless Bluetooth Headphones Pro\",\n    \"description\": \"Premium wireless headphones with ANC\",\n    \"price\": 3499.00,\n    \"stock\": 45,\n    \"category\": \"Electronics\",\n    \"imageUrl\": \"https://example.com/headphones-pro.jpg\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/products/{{productId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "products", "{{productId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Cart APIs",
			"item": [
				{
					"name": "Add Item to Cart",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": 1,\n    \"productId\": 1,\n    \"quantity\": 2\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/cart/add",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "add"]
						}
					}
				},
				{
					"name": "Add Another Item to Cart",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": 1,\n    \"productId\": 2,\n    \"quantity\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/cart/add",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "add"]
						}
					}
				},
				{
					"name": "Get User Cart",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/cart/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "{{userId}}"]
						}
					}
				},
				{
					"name": "Update Cart Item Quantity",
					"request": {
						"method": "PUT",
						"url": {
							"raw": "{{baseUrl}}/api/cart/{{userId}}/items/{{productId}}?quantity=3",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "{{userId}}", "items", "{{productId}}"],
							"query": [
								{
									"key": "quantity",
									"value": "3"
								}
							]
						}
					}
				},
				{
					"name": "Remove Item from Cart",
					"request": {
						"method": "DELETE",
						"url": {
							"raw": "{{baseUrl}}/api/cart/{{userId}}/items/{{productId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "{{userId}}", "items", "{{productId}}"]
						}
					}
				},
				{
					"name": "Clear Cart",
					"request": {
						"method": "DELETE",
						"url": {
							"raw": "{{baseUrl}}/api/cart/{{userId}}/clear",
							"host": ["{{baseUrl}}"],
							"path": ["api", "cart", "{{userId}}", "clear"]
						}
					}
				}
			]
		},
		{
			"name": "Order APIs",
			"item": [
				{
					"name": "Create Order",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": 1,\n    \"shippingAddress\": \"123 Main Street, Mumbai, Maharashtra 400001\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/orders",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders"]
						}
					}
				},
				{
					"name": "Get Order by ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/orders/{{orderId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders", "{{orderId}}"]
						}
					}
				},
				{
					"name": "Get User Orders (Order History)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/orders/user/{{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders", "user", "{{userId}}"]
						}
					}
				},
				{
					"name": "Update Order Status",
					"request": {
						"method": "PUT",
						"url": {
							"raw": "{{baseUrl}}/api/orders/{{orderId}}/status?status=PROCESSING",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders", "{{orderId}}", "status"],
							"query": [
								{
									"key": "status",
									"value": "PROCESSING"
								}
							]
						}
					}
				},
				{
					"name": "Cancel Order",
					"request": {
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/api/orders/{{orderId}}/cancel",
							"host": ["{{baseUrl}}"],
							"path": ["api", "orders", "{{orderId}}", "cancel"]
						}
					}
				}
			]
		},
		{
			"name": "Payment APIs",
			"item": [
				{
					"name": "Create Payment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"orderId\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/payments/create",
							"host": ["{{baseUrl}}"],
							"path": ["api", "payments", "create"]
						}
					}
				},
				{
					"name": "Get Payment by Order ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/payments/order/{{orderId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "payments", "order", "{{orderId}}"]
						}
					}
				},
				{
					"name": "Get Razorpay Key",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/api/payments/razorpay-key",
							"host": ["{{baseUrl}}"],
							"path": ["api", "payments", "razorpay-key"]
						}
					}
				}
			]
		},
		{
			"name": "Webhook APIs",
			"item": [
				{
					"name": "Payment Webhook Callback",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"razorpay_order_id\": \"order_xxx\",\n    \"razorpay_payment_id\": \"pay_xxx\",\n    \"razorpay_signature\": \"signature_xxx\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/webhooks/payment",
							"host": ["{{baseUrl}}"],
							"path": ["api", "webhooks", "payment"]
						},
						"description": "This endpoint receives payment callback from Razorpay. Replace the values with actual Razorpay response data."
					}
				}
			]
		}
	]
}
